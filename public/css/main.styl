*
	margin 0
body
	background red
	font-family: 'Roboto'
.items-container
	display: flex	
	flex-direction: column
	align-items: center
	margin-top:15px
.item
	background: #ffffff
	border-bottom: 1px solid #ddd
	border-radius: 3px
	box-shadow: 0 4px 8px rgba(0, 0, 0, .125)
	padding: 15px
	margin-bottom: 15px	
	width: 960px
	line-height: 25px
.color
	background-color: green;
	padding: 3px;
	color #ffffff
a 
	display block
	text-decoration: none;
	padding 10px;
	background-color: black
	color white
.header-container
	display flex
	flex-direction: row		
